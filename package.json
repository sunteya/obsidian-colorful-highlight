		"builtin-modules": "3.3.0",
		"esbuild": "0.14.47",
		"obsidian": "latest",
		"tslib": "2.4.0",
		"typescript": "4.7.4"
	},

	"dependencies": {
		"ts-md5": "^1.3.1"
	}
}
